#       "/pipeline/main/{instance}/err":  [ "/offramp/err_file/{instance}/in"]
#       "/pipeline/exit/{instance}/out":  [ "/offramp/exit/{instance}/in"    ]
#       "/pipeline/exit/{instance}/err":  [ "/offramp/err_file/{instance}/in"]
# 
# mapping:
#   /binding/blast/01:
